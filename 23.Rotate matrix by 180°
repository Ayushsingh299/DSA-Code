import java.util.Scanner;
class RotateMatrix180 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter number of rows: ");
        int rows = sc.nextInt();
        System.out.print("Enter number of columns: ");
        int cols = sc.nextInt();

        int[][] matrix = new int[rows][cols];

        System.out.println("Enter matrix elements:");
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                matrix[i][j] = sc.nextInt();
            }
        }
        for (int i = 0; i < rows / 2; i++) {
            for (int j = 0; j < cols; j++) {
                int temp = matrix[i][j];
                matrix[i][j] = matrix[rows - 1 - i][cols - 1 - j];
                matrix[rows - 1 - i][cols - 1 - j] = temp;
            }
        }
        if (rows % 2 != 0) {
            int mid = rows / 2;
            for (int j = 0; j < cols / 2; j++) {
                int temp = matrix[mid][j];
                matrix[mid][j] = matrix[mid][cols - 1 - j];
                matrix[mid][cols - 1 - j] = temp;
            }
        }
        System.out.println("\nMatrix after 180Â° rotation:");
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                System.out.print(matrix[i][j] + " ");
            }
            System.out.println();
        }
    }
}
