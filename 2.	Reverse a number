import java.util.Scanner;
class ReverseNumber {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int n = sc.nextInt();

        int reversed = 0;
        int temp = Math.abs(n);

        while (temp != 0) {
            int digit = temp % 10;
            reversed = reversed * 10 + digit;
            temp = temp / 10;
        }

        if (n < 0) {
            reversed = -reversed;
        }

        System.out.println("Reversed number: " + reversed);
    }
}
